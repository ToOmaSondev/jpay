  <div class="home-container">
    <div class="half-home">
      <h1 class="text-center">Jipay</h1>
      <p class="text-center mb-5">Lorem ipsum et dolor sit amet</p>
      <div class="d-flex justify-content-around">
        <%= link_to "Explore", items_path, class: "home-btn" %>
        <%= link_to "Upload", new_item_path, class: "home-btn" %>

      </div>
