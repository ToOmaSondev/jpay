<div class="home-container">
  <div class="search">
  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  <% end %>
</div>

<div class="row my-2">
  <% @items.each do |item| %>
    <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
      <div class="bg-white rounded shadow h-100">

        <div class="p-3 rounded-bottom d-flex flex-column">
          <% if item.photo.attached? %>
            <%=  cl_image_tag item.photo.key, alt: item.name, class: "container-card" %>
          <% end %>
          <div class="d-flex align-items-end justify-content-between pt-4">
            <div>
              <i class="fas fa-quote-left me-2"></i><small class="flex-grow-1"><%= item.name %></small>
              <%= link_to 'See more', item_path(item), class: "btn btn-gradient" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

</div>
