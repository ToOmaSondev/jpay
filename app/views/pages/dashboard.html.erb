<div class="container">
  <ul class="nav nav-tabs my-5" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">My items</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">My bookings</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">ConActive bookings</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#inactive" type="button" role="tab" aria-controls="inactive" aria-selected="false">Inactive</button>
    </li>
  </ul>
  <div class="tab-content mb-5" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
      <h2>WOW MY JPAY</h2>
      <div class="cards-container">
        <% @my_items.each do |item| %>
          <%= link_to item_path(item) do %>
            <%= render 'shared/card', item: item %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
      <h2>WOW MY JPAY BOOKINGS</h2>
      <div class="cards-container">
        <% @bookings.each do |booking| %>
          <%= link_to item_path(booking.item) do %>
            <%= render 'shared/card', item: booking.item %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
      <h2>WOW MY ACTIVE JPAY BOOKINGS</h2>
      <div class="cards-container">
        <% @active_incoming_bookings.each do |booking| %>
          <%= link_to item_path(booking.item) do %>
            <%= render 'shared/card', item: booking.item %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="tab-pane fade" id="inactive" role="tabpanel" aria-labelledby="inactive-tab">
      <h2>WOW MY INACTIVE JPAY BOOKINGS</h2>
      <div class="cards-container">
        <% @inactive_incoming_bookings.each do |booking| %>
          <%= link_to item_path(booking.item) do %>
            <%= render 'shared/card', item: booking.item %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
