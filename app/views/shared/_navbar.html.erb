          <%= image_tag "https://cloudfront-us-east-2.images.arcpublishing.com/reuters/34GWN2I7W5LJJDYR7VOOLE7MLY.jpg", class: "avatar dropdown-toggle" %>
        </div>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Rent Jpeg", items_path, class: "dropdown-item" %>
